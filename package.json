  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "serve": "http-server frontend/public -p 8000",
    "build": "npm run build:css && npm run build:js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,css,md}\""
