  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nexus-project"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
